{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
